<Window x:Class="lab_mdk_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_mdk_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lbQueue"  Grid.Column="0" Margin="10"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox x:Name="tbElementQueue" Margin="10 20"
                                Background="AliceBlue" Grid.Row="0"/>
            <Button Content="Добавить" Margin="10" Grid.Row="1" Click="Button_Click" />
            <Button Content="Извлечь" Margin="10" Grid.Row="2" Click="Button_Click_1"/>
            <Button Content="Суммарная длина" Margin="10" Grid.Row="3" Click="Button_Click_2" />
            <TextBlock x:Name="tbResultQueue" Grid.Row="4" Margin="10" Background="AliceBlue"/>
        </Grid>
    </Grid>
</Window>
